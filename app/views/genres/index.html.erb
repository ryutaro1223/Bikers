<div class="genre-index">
  <head>
    <link rel="stylesheet" href="genres.scss" />
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
  </head>
    <h1>Jenres</h1>
    <% @genres.each do |genre| %>
    <div class="genre-index-all">
      <div class="genre-index-details">
        <%= link_to genre_path(genre.id) do %>
         <p>ジャンル名:<%= genre.name %></p>
        <% end %>
         <p>説明:<br /><%= genre.instruction %></p>
      </div>
    </div>
    <% end %>
    <!--ユーザーに新たに追加させない-->
    <% if user_signed_in? && current_user.admin? %>
      <p><%= link_to "ジャンル追加", new_genre_path %></p>
    <% end %>
</div>