<div class="post-new">
 <h1>新規投稿</h1>
<%= form_with model: @genre, local: true do |f| %>
 <h4>ジャンル</h4>
 <%= f.text_field :name %>
<% end %>
<%= form_with model: @post, local: true do |f| %>
 <h4>画像</h4>
 <%= f.attachment_field :image %>
 <h4>タイトル</h4>
 <%= f.text_field :post_name %>
 <h4>本文</h4>
 <%= f.text_area :caption, size: "20x15" %>
 <%= f.submit '投稿' %>
<% end %>
</div>