<div class="box">
  <div class="box-inner">
    <%= form_with model:@user, url: user_session_path, id:'current_user', class: 'current_user', local: true do |f| %>
    <h2>ログイン</h2>
    
      <div class="box-name">
        <%= f.label :name, "名前" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>

      <div class="box-password">
        <div class="a-row">
          <div class="column-left">
            <%= f.label :password, "パスワード" %>
          </div>
          <div class="column-right">
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        </div>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="box-login">
        <%= f.submit "ログイン" %>
        <div class="legal-text">
          続行することで、Bikersの
          <%= link_to "利用規約", "/home/about" %>
          および
          <%= link_to "プライバシー規約","/home/about" %>
          に同意するものとみなされます・
        </div>
       <% if devise_mapping.rememberable? %>
        <div class="remember">
          <%= f.check_box :remember_me %>
          <%= f.label :remember, "ログインしたままにする" %>
        </div>
       <% end %>
      </div>
      <% end %>
      <div class="box-newusr">
        <p><span>-------------</span>Bikersの新しいお客様ですか？<span>------------</span></p>
        <%= link_to"Bikersアカウントを作成", new_user_registration_path %>
      </div>
  </div>
</div>